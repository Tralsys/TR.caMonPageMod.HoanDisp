			</local:HoanLamp.Content>
		</local:HoanLamp>
		<!--#endregion Row 1-->
	
		<!--#region Row 2-->
		<local:HoanLamp DataContext="{Binding TASC_Dengen}"
										Background="{StaticResource Lamp_Green}"
										Grid.Column="1"
										Grid.Row="2"
										IsLighting="{Binding IsLighting}">
			<local:HoanLamp.Content>
