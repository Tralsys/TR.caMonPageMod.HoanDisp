						<TextBlock Text="Ｃ"/>
					</StackPanel>
				</StackPanel>
			</local:HoanLamp.Content>
		</local:HoanLamp>

		<local:HoanLamp DataContext="{Binding TASC_Kosyo}"
										Background="{StaticResource Lamp_Red}"
										Grid.Column="5"
										Grid.Row="2"
										IsLighting="{Binding IsLighting}">
			<local:HoanLamp.Content>
				<StackPanel Orientation="Horizontal">
					<StackPanel VerticalAlignment="Bottom">
						<TextBlock Text="故"/>
						<TextBlock Text="障"/>
					</StackPanel>
					<StackPanel>
						<TextBlock Text="Ｔ"/>
						<TextBlock Text="Ａ"/>
						<TextBlock Text="Ｓ"/>
						<TextBlock Text="Ｃ"/>
					</StackPanel>
				</StackPanel>
			</local:HoanLamp.Content>
		</local:HoanLamp>

		<local:HoanLamp DataContext="{Binding Inching_SeigyoChu}"
										Background="{StaticResource Lamp_Orange}"
										Grid.Column="6"
										Grid.Row="2"
										IsLighting="{Binding IsLighting}">
			<local:HoanLamp.Content>
				<StackPanel Orientation="Horizontal">
					<StackPanel VerticalAlignment="Bottom">
						<TextBlock Text="制"/>
						<TextBlock Text="御"/>
						<TextBlock Text="中"/>
					</StackPanel>
					<StackPanel>
						<TextBlock Text="イ"/>
						<TextBlock Text="ン"/>
						<TextBlock Text="チ"/>
						<TextBlock Text="ン"/>
						<TextBlock Text="グ"/>
					</StackPanel>
				</StackPanel>
			</local:HoanLamp.Content>
		</local:HoanLamp>
		<!--#endregion Row 2-->
	
		<!--#region Row 3-->
		<local:HoanLamp DataContext="{Binding Tei_Ichi}"
										Background="{StaticResource Lamp_Green}"
										Grid.Column="1"
										Grid.Row="3"
										IsLighting="{Binding IsLighting}">
			<local:HoanLamp.Content>
				<StackPanel>
					<TextBlock Text="定"/>
					<TextBlock Text="位"/>
