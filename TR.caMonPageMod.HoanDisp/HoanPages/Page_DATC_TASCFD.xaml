				</StackPanel>
			</local:HoanLamp.Content>
		</local:HoanLamp>

		<local:HoanLamp DataContext="{Binding CarDoor_AllClosed}"
										Background="{StaticResource Lamp_Green}"
										Grid.Column="2"
										Grid.Row="3"
										IsLighting="{Binding IsLighting}">
			<local:HoanLamp.Content>
				<StackPanel Orientation="Horizontal">
					<StackPanel VerticalAlignment="Bottom">
						<TextBlock Text="全"/>
