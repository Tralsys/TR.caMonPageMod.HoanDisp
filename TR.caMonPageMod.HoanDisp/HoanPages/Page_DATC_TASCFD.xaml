				<StackPanel Orientation="Horizontal">
					<StackPanel VerticalAlignment="Bottom">
						<TextBlock Text="低"/>
						<TextBlock Text="減"/>
					</StackPanel>
					<StackPanel>
						<TextBlock Text="パ"/>
						<TextBlock Text="タ"/>
						<TextBlock Text="ー" RenderTransform="{StaticResource Rotate90}"/>
						<TextBlock Text="ン"/>
					</StackPanel>
				</StackPanel>
			</local:HoanLamp.Content>
		</local:HoanLamp>

		<local:HoanLamp DataContext="{Binding DATC_Hijo_Unten}"
